{
  "name": "elysia-production-template",
  "version": "1.0.0",
  "description": "Production-ready Elysia.js backend template with Bun",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "bunx @biomejs/biome check ./src",
    "lint:fix": "bunx @biomejs/biome check --apply ./src",
    "format": "bunx @biomejs/biome format --write ./src",
    "typecheck": "bun tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/jwt": "^1.1.1",
    "@elysiajs/swagger": "^1.1.5",
    "elysia": "^1.1.25",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.13",
    "bun-types": "^1.1.34"
  },
  "keywords": [
    "elysia",
    "bun",
    "backend",
    "api",
    "typescript",
    "template"
  ],
  "author": "",
  "license": "MIT"
}
